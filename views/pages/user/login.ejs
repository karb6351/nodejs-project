<%- include('../../include/header'); %>
<div class="teal lighten-2 login">
    <div class="container">
        <div class="row">
            <div class="col offset-m3 s12 m6">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title teal-text lighten-2">
                            Login
                        </span>
                        <form action="/user/login" method="POST">
                            <div class="input-field">
                                <input type="text" id="userid" class="validate" name="userid">
                                <label for="userid">User ID</label>
                            </div>
                            <div class="input-field">
                                <input type="password" id="password" class="validate" name="password">
                                <label for="password">Password</label>
                            </div>
                            <button type="submit" class="btn waves-effect waves-light" name="action">Login</button>
                            <a href="/user/register" class="btn grey darken-1">Register</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include('../../include/footer'); %>