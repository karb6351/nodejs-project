<%- include('../../include/header'); %>
<%- include('../../include/nav'); %>
<div class="container">
    <div class="row">
        <div class="col m6 offset-m3">
            <form action="/restaurant/rate/<%= restaurant.restaurant_id  %>" method="POST">
                <div class="input-field col s12">
                    <input name="name" id="name" type="text" class="validate" value="<%= restaurant.name %>" readonly/>
                    <label for="name">Name</label>
                </div>

                <div class="input-field col s12">
                    <input name="restaurant_id" id="restaurant_id" value="<%=restaurant.restaurant_id %>" type="text" class="validate" readonly/>
                    <label for="restaurant_id">Restaurant id</label>
                </div>
                
                <div class="input-field col s12">
                    <input name="rate" id="rate" value="0" type="number" min="0" max="10" step="1" class="validate"/>
                    <label for="rate">Rate</label>
                </div>

                <button type="submit" class="btn waves-effect waves-light" name="action">Rate</button>
            </form>
        </div>
    </div>
</div>
<%- include('../../include/footer'); %>